<!DOCTYPE html>
<html>
  <head>
    <title>給料計算</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <% if flash[:notice] %>
      <p><%= flash[:notice] %></p>
    <% end %>
    
    <table width="30%" cellspacing="0" cellpadding="5">
    <tr>
      <td><%= link_to("Top","/")%></td>
    
      

      <% if admin_signed_in? %>
      　<td><%= link_to("シフト表作成","/admin/new")%></td>
        <td><%= link_to("シフト表一覧","/admin/index")%></td>
        <td><%= link_to("My page","/users/#{current_admin.id}")%></td>
      
        <div class="login-set">
          <span class=login-user>管理者でログインしています</span>
          <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
        </div>
      <% elsif user_signed_in? %>
        <div class="login-set">
          <span class=login-user><%= current_user.name1 + " " + current_user.name2 %>でログインしています</span>
          <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
        </div>
      <% else %>
        <div class="login-set">
          <%= link_to('ログイン', new_user_session_path) %>
          <%= link_to('管理者ログイン', new_admin_session_path) %>   
        </div>
      <% end %>
          
    
    </tr> 

    </table>
    <%= yield %>
  </body>
</html>
