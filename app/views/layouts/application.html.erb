<!DOCTYPE html>
<html>
  <head>
    <title>給料計算</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <% if flash[:notice] %>
      <p><%= flash[:notice] %></p>
    <% end %>
    
    <table cellspacing="5" cellpadding="5">
    <tr>
      <td><%= link_to("Top","/")%></td>
    
      

      <% if admin_signed_in? %>
      　<div class = "short_cut">
        <td><%= link_to("シフト表作成","/admin/new")%></td>
        <td><%= link_to("シフト表一覧","/admin/index")%></td>
        <td><%= link_to("ユーザー管理","/users/index")%></td>
        <td><%= link_to("ユーザー新規作成","/users/new")%></td>
        
      
        <div class = "login_set">
          <span class = "login_user">管理者でログインしています</span>
          <%= link_to('Logout', destroy_admin_session_path, method: :delete) %>
        </div>
      <% else %>
        <div class = "login_set">
          <%= link_to('管理者ログイン', new_admin_session_path) %>   
        </div>
      <% end %>
          
    
    </tr> 

    </table>
    <%= yield %>
  </body>
</html>
